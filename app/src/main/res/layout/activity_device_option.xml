<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background__"
    >

    <!-- Header with "Smart Hub" text and "+" button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Hub | Options"
                android:textColor="#D0D0D0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- Device grid layout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="4"
            android:layout_margin="3dp"
            >
            <TextView
                style="@style/temp_hum_styles"
                android:layout_width="match_parent"
                android:text="앱 정보"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_radius_background"
                android:id="@+id/appinfo"/>
            <TextView
                style="@style/temp_hum_styles"
                android:layout_width="match_parent"
                android:text="사용 방법"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_radius_background"
                android:id="@+id/howtouse"/>

            <TextView
                style="@style/temp_hum_styles"
                android:layout_width="match_parent"
                android:text="문의 하기"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_radius_background"
                android:id="@+id/feedback"/>
            <TextView
                style="@style/temp_hum_styles"
                android:layout_width="match_parent"
                android:text="기기 이름 변경"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_radius_background"
                android:id="@+id/device_rename"/>
            <TextView
                style="@style/temp_hum_styles"
                android:layout_width="match_parent"
                android:text="기기 삭제"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/layout_radius_background"
                android:id="@+id/device_delete"/>





            <!-- Add more CardViews for additional devices if needed -->

        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <include
            layout="@layout/device_bottom_bar" />
    </LinearLayout>
</LinearLayout>
